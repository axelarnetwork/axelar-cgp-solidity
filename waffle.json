{
  "compilerType": "solcjs",
  "compilerVersion": "0.8.9",
  "sourceDirectory": "./src",
  "outputDirectory": "./build",
  "compilerOptions": {
    "evmVersion": "london",
    "optimizer": {
      "enabled": true,
      "runs": 1000,
      "details": {
        "peephole": true,
        "inliner": true,
        "jumpdestRemover": true,
        "orderLiterals": true,
        "deduplicate": true,
        "cse": true,
        "constantOptimizer": true,
        "yul": true,
        "yulDetails": {
          "stackAllocation": true
        }
      }
    }
  }
}
